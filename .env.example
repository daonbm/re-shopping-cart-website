# Server Configuration
SERVER_PORT=8080

# Spring Profile
SPRING_PROFILES_ACTIVE=local

# Database Configuration (Aiven MySQL)
DB_URL=jdbc:mysql://your-aiven-host:3306/your-database-name
DB_USERNAME=your-database-username
DB_PASSWORD=your-database-password

# JPA Configuration
SHOW_SQL=false

# Thymeleaf Configuration
THYMELEAF_CACHE=false

# Java Options (optional)
JAVA_OPTS=-Xms512m -Xmx512m -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# Timezone
TZ=UTC
